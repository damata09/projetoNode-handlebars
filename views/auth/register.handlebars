<!-- Register Section -->
<section class="py-5 min-vh-100 d-flex align-items-center">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card card-modern">
                    <div class="card-header text-center py-4" style="background: var(--gradient-secondary); border: none;">
                        <h3 class="mb-0 text-white">
                            <i class="fas fa-user-plus me-2"></i>Registrar-se
                        </h3>
                        <p class="text-white-50 mt-2 mb-0">Junte-se à comunidade DevPoints</p>
                    </div>
                    <div class="card-body p-5">
                        <form action="/register" method="POST">
                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <label for="name" class="form-label-modern">
                                        <i class="fas fa-user me-2"></i>Nome Completo
                                    </label>
                                    <input type="text" class="form-control-modern" id="name" name="name" placeholder="Seu nome completo" required>
                                </div>
                                
                                <div class="col-md-6 mb-4">
                                    <label for="email" class="form-label-modern">
                                        <i class="fas fa-envelope me-2"></i>Email
                                    </label>
                                    <input type="email" class="form-control-modern" id="email" name="email" placeholder="seu@email.com" required>
                                </div>
                            </div>
                            
                            <div class="mb-4">
                                <label for="username" class="form-label-modern">
                                    <i class="fas fa-at me-2"></i>Nome de Usuário
                                </label>
                                <input type="text" class="form-control-modern" id="username" name="username" placeholder="seu_usuario" required>
                                <div class="form-text text-secondary">Este será seu nome de usuário único no sistema.</div>
                            </div>
                            
                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <label for="password" class="form-label-modern">
                                        <i class="fas fa-lock me-2"></i>Senha
                                    </label>
                                    <input type="password" class="form-control-modern" id="password" name="password" placeholder="Mínimo 6 caracteres" required minlength="6">
                                    <div class="form-text text-secondary">Mínimo de 6 caracteres.</div>
                                </div>
                                
                                <div class="col-md-6 mb-4">
                                    <label for="confirmPassword" class="form-label-modern">
                                        <i class="fas fa-lock me-2"></i>Confirmar Senha
                                    </label>
                                    <input type="password" class="form-control-modern" id="confirmPassword" name="confirmPassword" placeholder="Confirme sua senha" required>
                                </div>
                            </div>
                            
                            <div class="d-grid mb-4">
                                <button type="submit" class="btn btn-modern">
                                    <i class="fas fa-user-plus me-2"></i>Criar Conta
                                </button>
                            </div>
                        </form>
                    </div>
                    <div class="card-footer text-center py-4" style="background: var(--bg-darker); border: none;">
                        <p class="mb-0 text-secondary">
                            Já tem uma conta? 
                            <a href="/login" class="text-decoration-none" style="color: var(--primary-green); font-weight: 600;">
                                <i class="fas fa-sign-in-alt me-1"></i>Faça login aqui
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
