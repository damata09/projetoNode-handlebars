<!-- Login Section -->
<section class="py-5 min-vh-100 d-flex align-items-center">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
                <div class="card card-modern">
                    <div class="card-header text-center py-4" style="background: var(--gradient-primary); border: none;">
                        <h3 class="mb-0 text-white">
                            <i class="fas fa-sign-in-alt me-2"></i>Login
                        </h3>
                        <p class="text-white-50 mt-2 mb-0">Entre na sua conta DevPoints</p>
                    </div>
                    <div class="card-body p-5">
                        <form action="/login" method="POST">
                            <div class="mb-4">
                                <label for="email" class="form-label-modern">
                                    <i class="fas fa-envelope me-2"></i>Email
                                </label>
                                <input type="email" class="form-control-modern" id="email" name="email" placeholder="seu@email.com" required>
                            </div>
                            
                            <div class="mb-4">
                                <label for="password" class="form-label-modern">
                                    <i class="fas fa-lock me-2"></i>Senha
                                </label>
                                <input type="password" class="form-control-modern" id="password" name="password" placeholder="Sua senha" required>
                            </div>
                            
                            <div class="d-grid mb-4">
                                <button type="submit" class="btn btn-modern">
                                    <i class="fas fa-sign-in-alt me-2"></i>Entrar
                                </button>
                            </div>
                        </form>
                    </div>
                    <div class="card-footer text-center py-4" style="background: var(--bg-darker); border: none;">
                        <p class="mb-0 text-secondary">
                            NÃ£o tem uma conta? 
                            <a href="/register" class="text-decoration-none" style="color: var(--primary-purple); font-weight: 600;">
                                <i class="fas fa-user-plus me-1"></i>Registre-se aqui
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
