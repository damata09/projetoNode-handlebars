<!-- Demo Section -->
<section class="py-5 min-vh-100">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center mb-5">
                <h1 class="display-4 fw-bold gradient-text mb-3">
                    <i class="fas fa-palette me-3"></i>DevPoints Design System
                </h1>
                <p class="lead text-secondary">Explore as cores, componentes e estilos da plataforma</p>
            </div>
        </div>

        <!-- Cores Principais -->
        <div class="demo-section">
            <h2 class="gradient-text-secondary mb-4">
                <i class="fas fa-paint-brush me-2"></i>Cores Principais
            </h2>
            <div class="demo-colors">
                <div class="color-card">
                    <div class="color-swatch color-primary">Roxo</div>
                    <h6>Primary Purple</h6>
                    <code>#8B5CF6</code>
                </div>
                <div class="color-card">
                    <div class="color-swatch color-blue">Azul</div>
                    <h6>Primary Blue</h6>
                    <code>#3B82F6</code>
                </div>
                <div class="color-card">
                    <div class="color-swatch color-green">Verde</div>
                    <h6>Primary Green</h6>
                    <code>#10B981</code>
                </div>
                <div class="color-card">
                    <div class="color-swatch color-cyan">Ciano</div>
                    <h6>Primary Cyan</h6>
                    <code>#06B6D4</code>
                </div>
                <div class="color-card">
                    <div class="color-swatch color-pink">Rosa</div>
                    <h6>Primary Pink</h6>
                    <code>#EC4899</code>
                </div>
            </div>
        </div>

        <!-- Gradientes -->
        <div class="demo-section">
            <h2 class="gradient-text-accent mb-4">
                <i class="fas fa-gradient me-2"></i>Gradientes
            </h2>
            <div class="demo-colors">
                <div class="color-card">
                    <div class="color-swatch gradient-primary">Primary</div>
                    <h6>Gradient Primary</h6>
                    <code>Purple → Blue</code>
                </div>
                <div class="color-card">
                    <div class="color-swatch gradient-secondary">Secondary</div>
                    <h6>Gradient Secondary</h6>
                    <code>Green → Cyan</code>
                </div>
                <div class="color-card">
                    <div class="color-swatch gradient-accent">Accent</div>
                    <h6>Gradient Accent</h6>
                    <code>Pink → Purple</code>
                </div>
            </div>
        </div>

        <!-- Botões -->
        <div class="demo-section">
            <h2 class="gradient-text mb-4">
                <i class="fas fa-mouse-pointer me-2"></i>Botões
            </h2>
            <div class="demo-buttons">
                <button class="btn btn-modern">Botão Moderno</button>
                <button class="btn btn-outline-modern">Botão Outline</button>
                <button class="btn btn-modern btn-lg">Botão Grande</button>
                <button class="btn btn-outline-modern btn-sm">Botão Pequeno</button>
            </div>
        </div>

        <!-- Cards -->
        <div class="demo-section">
            <h2 class="gradient-text-secondary mb-4">
                <i class="fas fa-id-card me-2"></i>Cards
            </h2>
            <div class="demo-cards">
                <div class="card card-modern">
                    <div class="card-body p-4">
                        <h5 class="card-title">Card Padrão</h5>
                        <p class="card-text text-secondary">Este é um exemplo de card com o design moderno do DevPoints.</p>
                        <button class="btn btn-modern btn-sm">Ação</button>
                    </div>
                </div>
                <div class="card card-modern">
                    <div class="card-body p-4 text-center">
                        <i class="fas fa-star fa-3x mb-3" style="background: var(--gradient-primary); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;"></i>
                        <h5 class="card-title">Card com Ícone</h5>
                        <p class="card-text text-secondary">Cards podem incluir ícones coloridos e gradientes.</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tipografia -->
        <div class="demo-section">
            <h2 class="gradient-text-accent mb-4">
                <i class="fas fa-font me-2"></i>Tipografia
            </h2>
            <div class="demo-typography">
                <h1 class="gradient-text">Heading 1 - Título Principal</h1>
                <h2 class="gradient-text-secondary">Heading 2 - Subtítulo</h2>
                <h3 class="gradient-text-accent">Heading 3 - Seção</h3>
                <h4>Heading 4 - Subseção</h4>
                <h5>Heading 5 - Item</h5>
                <h6>Heading 6 - Detalhe</h6>
                <p class="lead">Este é um parágrafo destacado (lead) com texto maior e mais visível.</p>
                <p>Este é um parágrafo normal com texto secundário em <span class="text-secondary">cinza</span> e <strong>negrito</strong>.</p>
            </div>
        </div>

        <!-- Formulários -->
        <div class="demo-section">
            <h2 class="gradient-text mb-4">
                <i class="fas fa-edit me-2"></i>Formulários
            </h2>
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="card card-modern">
                        <div class="card-body p-4">
                            <form>
                                <div class="mb-4">
                                    <label class="form-label-modern">
                                        <i class="fas fa-user me-2"></i>Nome
                                    </label>
                                    <input type="text" class="form-control-modern" placeholder="Seu nome">
                                </div>
                                <div class="mb-4">
                                    <label class="form-label-modern">
                                        <i class="fas fa-envelope me-2"></i>Email
                                    </label>
                                    <input type="email" class="form-control-modern" placeholder="seu@email.com">
                                </div>
                                <div class="mb-4">
                                    <label class="form-label-modern">
                                        <i class="fas fa-comment me-2"></i>Mensagem
                                    </label>
                                    <textarea class="form-control-modern" rows="4" placeholder="Sua mensagem"></textarea>
                                </div>
                                <div class="d-grid">
                                    <button type="submit" class="btn btn-modern">Enviar</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Alertas -->
        <div class="demo-section">
            <h2 class="gradient-text-secondary mb-4">
                <i class="fas fa-exclamation-triangle me-2"></i>Alertas
            </h2>
            <div class="alert alert-success-modern">
                <i class="fas fa-check-circle me-2"></i>
                <strong>Sucesso!</strong> Operação realizada com sucesso.
            </div>
            <div class="alert alert-danger-modern">
                <i class="fas fa-exclamation-circle me-2"></i>
                <strong>Erro!</strong> Algo deu errado. Tente novamente.
            </div>
        </div>

        <!-- Voltar -->
        <div class="text-center mt-5">
            <a href="/" class="btn btn-outline-modern btn-lg">
                <i class="fas fa-arrow-left me-2"></i>Voltar ao Início
            </a>
        </div>
    </div>
</section>

