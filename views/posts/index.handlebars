<!-- Posts Header -->
<section class="py-5" style="background: var(--gradient-dark);">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div>
                        <h2 class="display-6 fw-bold mb-2" style="background: var(--gradient-primary); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;">
                            <i class="fas fa-newspaper me-2"></i>Todas as Postagens
                        </h2>
                        <p class="text-secondary mb-0">Explore o conhecimento compartilhado pela comunidade</p>
                    </div>
                    {{#if user}}
                    <a href="/posts/create" class="btn btn-modern">
                        <i class="fas fa-plus me-2"></i>Nova Postagem
                    </a>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Posts List -->
<section class="py-5">
    <div class="container">
        {{#if posts}}
        <div class="row g-4">
            {{#each posts}}
            <div class="col-12">
                <div class="card post-card">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <div class="flex-grow-1">
                                <div class="post-category mb-2">{{category}}</div>
                                <h5 class="post-title mb-2">{{title}}</h5>
                                <p class="post-content mb-3">{{truncate content 200}}</p>
                            </div>
                            <small class="text-muted">
                                <i class="fas fa-calendar me-1"></i>
                                {{formatDate createdAt}}
                            </small>
                        </div>
                        
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="d-flex align-items-center">
                                <div class="user-avatar me-3">
                                    {{#if user}}
                                        {{substring user.name 0 1}}
                                    {{else}}
                                        ?
                                    {{/if}}
                                </div>
                                <div>
                                    <small class="text-muted d-block">
                                        <i class="fas fa-user me-1"></i>
                                        {{#if user}}
                                            {{user.name}}
                                        {{else}}
                                            Usu√°rio removido
                                        {{/if}}
                                    </small>
                                    <div class="post-stats">
                                        <div class="post-stat">
                                            <i class="fas fa-eye"></i>
                                            {{views}}
                                        </div>
                                        <div class="post-stat">
                                            <i class="fas fa-heart"></i>
                                            {{likes}}
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="d-flex gap-2">
                                <a href="/posts/{{id}}" class="btn btn-outline-modern btn-sm">
                                    <i class="fas fa-eye me-1"></i>Ver Postagem
                                </a>
                                {{#if ../user}}
                                    {{#if (eq userId ../user.id)}}
                                    <a href="/posts/{{id}}/edit" class="btn btn-outline-modern btn-sm">
                                        <i class="fas fa-edit me-1"></i>Editar
                                    </a>
                                    {{/if}}
                                {{/if}}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
        {{else}}
        <div class="row">
            <div class="col-12">
                <div class="card card-modern text-center">
                    <div class="card-body p-5">
                        <i class="fas fa-info-circle fa-3x mb-3" style="color: var(--primary-cyan);"></i>
                        <h5 class="card-title">Nenhuma postagem encontrada</h5>
                        <p class="card-text text-secondary">Seja o primeiro a compartilhar conhecimento na comunidade!</p>
                        {{#if user}}
                        <a href="/posts/create" class="btn btn-modern">
                            <i class="fas fa-plus me-2"></i>Criar Primeira Postagem
                        </a>
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
        {{/if}}
    </div>
</section>
