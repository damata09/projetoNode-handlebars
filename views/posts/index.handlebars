<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>
                <i class="fas fa-newspaper me-2"></i>Todas as Postagens
            </h2>
            {{#if user}}
            <a href="/posts/create" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>Nova Postagem
            </a>
            {{/if}}
        </div>
    </div>
</div>

{{#if posts}}
<div class="row">
    {{#each posts}}
    <div class="col-12 mb-4">
        <div class="card post-card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start mb-3">
                    <h5 class="card-title mb-0">{{title}}</h5>
                    <small class="text-muted">
                        <i class="fas fa-calendar me-1"></i>
                        {{formatDate createdAt}}
                    </small>
                </div>
                
                <p class="card-text">{{truncate content 200}}</p>
                
                <div class="d-flex justify-content-between align-items-center">
                    <div class="d-flex align-items-center">
                        <div class="user-avatar me-2">
                            {{#if user}}
                                {{substring user.name 0 1}}
                            {{else}}
                                ?
                            {{/if}}
                        </div>
                        <div>
                            <small class="text-muted d-block">
                                <i class="fas fa-user me-1"></i>
                                {{#if user}}
                                    {{user.name}} (@{{user.username}})
                                {{else}}
                                    Usu√°rio removido
                                {{/if}}
                            </small>
                        </div>
                    </div>
                    
                    <div>
                        <a href="/posts/{{id}}" class="btn btn-outline-primary btn-sm">
                            <i class="fas fa-eye me-1"></i>Ver Postagem
                        </a>
                        {{#if ../user}}
                            {{#if (eq userId ../user.id)}}
                            <a href="/posts/{{id}}/edit" class="btn btn-outline-secondary btn-sm">
                                <i class="fas fa-edit me-1"></i>Editar
                            </a>
                            {{/if}}
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>
{{else}}
<div class="row">
    <div class="col-12">
        <div class="alert alert-info text-center">
            <i class="fas fa-info-circle me-2"></i>
            Nenhuma postagem encontrada. Seja o primeiro a postar!
            {{#if user}}
            <br><br>
            <a href="/posts/create" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>Criar Primeira Postagem
            </a>
            {{/if}}
        </div>
    </div>
</div>
{{/if}}
