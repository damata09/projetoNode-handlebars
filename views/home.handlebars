<div class="row">
    <div class="col-12">
        <div class="jumbotron bg-primary text-white p-5 rounded mb-4">
            <h1 class="display-4">
                <i class="fas fa-blog me-3"></i>Bem-vindo ao Sistema de Postagens
            </h1>
            <p class="lead">Compartilhe suas ideias, experiências e conhecimentos com outros usuários.</p>
            {{#unless user}}
            <hr class="my-4">
            <p>Faça login ou registre-se para começar a postar!</p>
            <a class="btn btn-light btn-lg me-3" href="/login" role="button">
                <i class="fas fa-sign-in-alt me-2"></i>Fazer Login
            </a>
            <a class="btn btn-outline-light btn-lg" href="/register" role="button">
                <i class="fas fa-user-plus me-2"></i>Registrar-se
            </a>
            {{/unless}}
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <h2 class="mb-4">
            <i class="fas fa-fire me-2"></i>Postagens Recentes
        </h2>
    </div>
</div>

{{#if posts}}
<div class="row">
    {{#each posts}}
    <div class="col-md-6 col-lg-4 mb-4">
        <div class="card post-card h-100">
            <div class="card-body">
                <h5 class="card-title">{{title}}</h5>
                <p class="card-text">{{truncate content 100}}</p>
                <div class="d-flex justify-content-between align-items-center">
                    <small class="text-muted">
                        <i class="fas fa-user me-1"></i>
                        {{#if user}}
                            {{user.name}}
                        {{else}}
                            Usuário removido
                        {{/if}}
                    </small>
                    <small class="text-muted">
                        <i class="fas fa-calendar me-1"></i>
                        {{formatDate createdAt}}
                    </small>
                </div>
            </div>
            <div class="card-footer bg-transparent">
                <a href="/posts/{{id}}" class="btn btn-primary btn-sm">
                    <i class="fas fa-eye me-1"></i>Ver Postagem
                </a>
            </div>
        </div>
    </div>
    {{/each}}
</div>

<div class="row mt-4">
    <div class="col-12 text-center">
        <a href="/posts" class="btn btn-outline-primary btn-lg">
            <i class="fas fa-list me-2"></i>Ver Todas as Postagens
        </a>
    </div>
</div>
{{else}}
<div class="row">
    <div class="col-12">
        <div class="alert alert-info text-center">
            <i class="fas fa-info-circle me-2"></i>
            Nenhuma postagem encontrada. Seja o primeiro a postar!
        </div>
    </div>
</div>
{{/if}}
